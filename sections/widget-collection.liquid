{% comment %}
  This section serves as the host for our React application.
  It loads the compiled JS and CSS files and provides a root element
  with the necessary data attributes.
{% endcomment %}

{{ 'react-app.css' | asset_url | stylesheet_tag }}

<div
  id="react-filter-app"
  data-collection-id="{{ collection.id }}"
  style="margin-top: 50px"
>
  <p>Loading products...</p>
</div>

<script src="{{ 'react-app.js' | asset_url }}" defer="defer"></script>

{% comment %}
